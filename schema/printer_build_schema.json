{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Printer Build",
    "description": "Metadata for a single build using a metals additive manufacturing printer",
    "type": "object",
    "properties": {
        "printerBuildID": {
            "title": "Printer Build ID",
            "description": "Must be unique among all 'Printer Build' entries",
            "type": "string",
            "format": "custom",
            "pattern": "^[a-zA-Z0-9_]+$",
            "propertyOrder": 0
        },
        "buildMachine": {
            "title": "Build Machine",
            "type": "object",
            "enum": [
                "EOS M290 at CMU"
            ],
            "propertyOrder": 1
        },
        "buildPlate": {
            "title": "Build Plate",
            "type": "object",
            "format": "grid",
            "properties": {
                "material": {
                    "title": "Material",
                    "type": "string",
                    "enum": [
                        "Ti-6Al-4V"
                    ],
                    "propertyOrder": 0
                },
                "temperature": {
                    "title": "Temperature (deg C)",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 450,
                    "propertyOrder": 1
                }
            },
            "required": [
                "material",
                "temperature"
            ],
            "propertyOrder": 2
        },
        "flowGas": {
            "title": "Flow Gas",
            "type": "object",
            "format": "grid",
            "properties": {
                "type": {
                    "title": "Type",
                    "type": "string",
                    "enum": [
                        "Ar",
                        "N2"
                    ],
                    "propertyOrder": 0
                },
                "flowRate": {
                    "title": "Flow Rate (lpm)",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 10,
                    "propertyOrder": 1
                },
                "o2Concentration": {
                    "title": "O2 concentration (%)",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 100,
                    "propertyOrder": 2
                }
            },
            "required": [
                "type",
                "flowRate",
                "o2Concentration"
            ],
            "propertyOrder": 3
        },
        "recoater": {
            "title": "Recoater",
            "type": "object",
            "format": "grid",
            "properties": {
                "material": {
                    "title": "Material",
                    "type": "string",
                    "enum": [
                        "metal",
                        "rubber"
                    ],
                    "propertyOrder": 0
                },
                "style": {
                    "title": "Style",
                    "type": "string",
                    "enum": [
                        "rake",
                        "roller",
                        "blade"
                    ],
                    "propertyOrder": 1
                }
            },
            "required": [
                "material",
                "style"
            ],
            "propertyOrder": 4
        },
        "buildParameters": {
            "title": "Build Parameters",
            "type": "object",
            "properties": {
                "contouringParameters": {
                    "title": "Contouring Parameters",
                    "$ref": "#/definitions/buildParameterSet",
                    "propertyOrder": 0
                },
                "infillParameters": {
                    "title": "Infill Parameters",
                    "$ref": "#/definitions/buildParameterSet",
                    "propertyOrder": 1
                },
                "upskinParameters": {
                    "title": "Upskin Parameters",
                    "$ref": "#/definitions/buildParameterSet",
                    "propertyOrder": 2
                },
                "downskinParameters": {
                    "title": "Downskin Parameters",
                    "$ref": "#/definitions/buildParameterSet",
                    "propertyOrder": 3
                }
            },
            "required": [
                "contouringParameters",
                "infillParameters",
                "upskinParameters",
                "downskinParameters"
            ],
            "propertyOrder": 5
        },
        "userParameters": {
            "title": "User Parameters",
            "type": "object",
            "properties": {
                "runDate": {
                    "title": "Run date",
                    "type": "string",
                    "format": "date",
                    "propertyOrder": 0
                },
                "runTime": {
                    "title": "Run time",
                    "type": "string",
                    "format": "time",
                    "propertyOrder": 1
                },
                "teamMembers": {
                    "title": "Personnel involved",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "Evan Adcock",
                            "Nick Lamprinakos",
                            "Katie O'Donnell"
                        ]
                    },
                    "propertyOrder": 2
                }
            },
            "required": [
                "runDate",
                "runTime",
                "teamMembers"
            ],
            "propertyOrder": 6
        },
        "openjzFile": {
            "title": "Build File (*.openjz)",
            "$ref": "#/definitions/fileUpload",
            "propertyOrder": 7
        },
        "eosReportFile": {
            "title": "EOS Job Quality Report (PDF)",
            "$ref": "#/definitions/fileUpload",
            "propertyOrder": 8
        },
        "misc": {
            "title": "Additional information",
            "description": "String-only keys/values for misc. metadata (not validated)",
            "type": "array",
            "items": {
                "$ref": "#/definitions/keyValue"
            },
            "propertyOrder": 9
        }
    },
    "required": [
        "printerBuildID",
        "buildMachine",
        "buildPlate",
        "flowGas",
        "recoater",
        "buildParameters",
        "userParameters",
        "openjzFile",
        "eosReportFile"
    ],
    "definitions": {
        "buildParameterSet": {
            "title": "Build parameter set",
            "type": "object",
            "properties": {
                "laserPower": {
                    "title": "Laser Power (W)",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 370
                },
                "laserVelocity": {
                    "title": "Laser Velocity (m/s)",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 10
                },
                "hatchSpacing": {
                    "title": "Hatch Spacing (microns)",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 300
                },
                "layerThickness": {
                    "title": "Layer Thickness (microns)",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 100
                }
            },
            "required": [
                "laserPower",
                "laserVelocity",
                "hatchSpacing",
                "layerThickness"
            ]
        },
        "fileUpload": {
            "title": "File",
            "type": "object",
            "format": "grid",
            "properties": {
                "file": {
                    "title": "Upload file",
                    "type": "string",
                    "propertyOrder": 0
                },
                "button": {
                    "title": "Browse",
                    "format": "button",
                    "options": {
                        "button": {
                            "action": "button1CB",
                            "uploadFor": "file"
                        }
                    },
                    "propertyOrder": 2
                }
            }
        },
        "keyValue": {
            "title": "Misc. metadata",
            "type": "object",
            "format": "grid",
            "properties": {
                "key": {
                    "title": "Key",
                    "type": "string",
                    "propertyOrder": 0
                },
                "value": {
                    "title": "Value",
                    "type": "string",
                    "propertyOrder": 1
                }
            },
            "required": [
                "key",
                "value"
            ]
        }
    }
}